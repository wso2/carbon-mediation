        <ManagementPermission>
            <DisplayName>list</DisplayName>
            <ResourceId>/permission/admin/manage/connectors/list</ResourceId>
        </ManagementPermission>
        <ManagementPermission>
            <DisplayName>add</DisplayName>
            <ResourceId>/permission/admin/manage/connectors/add</ResourceId>
