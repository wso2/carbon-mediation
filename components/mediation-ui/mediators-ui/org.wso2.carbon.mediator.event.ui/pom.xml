<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon.mediation</groupId>
        <artifactId>mediators-ui</artifactId>
        <version>4.4.3-SNAPSHOT</version>
    </parent>
    <version>4.4.3-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.mediator.event.ui</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - Event Mediator UI</name>
    <url>http://wso2.org</url>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>target/generated-code/src</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Bundle-Activator>org.wso2.carbon.mediator.event.ui.EventMediatorActivator</Bundle-Activator>
                        <Carbon-Component>UIBundle</Carbon-Component>
                        <Export-Package>
                            org.wso2.carbon.mediator.event.ui.*,
                            !javax.servlet,
                            !javax.servlet.http,
                        </Export-Package>
                        <Import-Package>
                            org.wso2.carbon.mediator.event.stub.*;version="${carbon.mediation.imp.pkg.version}",
                            !javax.xml.namespace,
                            javax.xml.namespace; version=0.0.0,
                            org.apache.commons.logging,
                            org.osgi.framework,
                            org.wso2.carbon.mediator.service.*,
                            org.apache.axiom.om; version="${axiom.osgi.version.range}",
                            *;resolution:=optional
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>        
        <dependency>
            <groupId>org.wso2.carbon.mediation</groupId>
            <artifactId>org.wso2.carbon.mediator.service</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.logging</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.mediation</groupId>
            <artifactId>org.wso2.carbon.mediators.event.admin.stub</artifactId>
        </dependency>
    </dependencies>

</project>
