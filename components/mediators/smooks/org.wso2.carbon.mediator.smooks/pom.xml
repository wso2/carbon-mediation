<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.wso2.carbon.mediation</groupId>
        <artifactId>smooks-mediator</artifactId>
        <version>4.4.3-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <version>4.4.3-SNAPSHOT</version>
    <artifactId>org.wso2.carbon.mediator.smooks</artifactId>
    <packaging>bundle</packaging>    
    <name>WSO2 Carbon - Smooks mediators</name>
    <url>http://wso2.org</url>

    <build>
        <plugins>
                      
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Bundle-Vendor>WSO2 Inc</Bundle-Vendor>
                        <Bundle-Description>${project.description}</Bundle-Description>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            org.wso2.carbon.mediator.transform.*,
                        </Export-Package>
                        <Import-Package>
                            !javax.xml.namespace,
                            javax.xml.namespace; version=0.0.0,
                            org.apache.commons.logging.*;version="${org.apache.commons.logging.version}",
                            org.wso2.carbon.mediator.service.*,
                            org.osgi.framework,                                                        
                            *;resolution:=optional,
                        </Import-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                        <Fragment-Host>synapse-core</Fragment-Host>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.apache.synapse</groupId>           
            <artifactId>synapse-core</artifactId>           
        </dependency>
        <dependency>
            <groupId>org.milyn.wso2</groupId>
            <artifactId>smooks</artifactId>            
        </dependency>
       <dependency>
			<groupId>javax.persistence</groupId>
			<artifactId>persistence-api</artifactId>
		</dependency>
		<dependency>
            <groupId>org.wso2.carbon.mediation</groupId>
            <artifactId>org.wso2.carbon.mediator.service</artifactId>
        </dependency>
	</dependencies> 
</project>
