<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.wso2.carbon.mediation</groupId>
        <artifactId>dataservice-mediator</artifactId>
        <version>4.7.12-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <version>4.7.12-SNAPSHOT</version>
    <artifactId>org.wso2.carbon.mediator.dataservice</artifactId>
    <packaging>bundle</packaging>    
    <name>WSO2 Carbon - DataService mediators</name>
    <url>http://wso2.org</url>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>org.wso2.carbon.mediator.dataservice</Export-Package>
                        <Import-Package>
                            org.wso2.carbon.dataservices.core.*,
                            org.apache.axis2.*,
                            org.apache.axiom.*; version="${axiom.osgi.version.range}",
                            !javax.xml.namespace,
                            javax.xml.namespace;version="0.0.0"
                        </Import-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                        <Fragment-Host>synapse-core</Fragment-Host>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.apache.synapse</groupId>           
            <artifactId>synapse-core</artifactId>           
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.data</groupId>
            <artifactId>org.wso2.carbon.dataservices.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.axis2.wso2</groupId>
            <artifactId>axis2</artifactId>
        </dependency>
	</dependencies> 
</project>
