<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon.mediation</groupId>
        <artifactId>mediation-statistics</artifactId>
        <version>4.4.2-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon.mediation</groupId>
    <artifactId>org.wso2.carbon.mediation.statistics.ui</artifactId>
    <version>4.4.2-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - Mediation Statistics UI</name>
    <url>http://wso2.org</url>
    <description>Statics bundle for Sequence and Endpoint statistics</description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.ui</artifactId>
        </dependency>
	<dependency>
            <groupId>org.wso2.carbon.mediation</groupId>
            <artifactId>org.wso2.carbon.mediation.statistics.stub</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.wso2.carbon.mediation.statistics.ui.*
                        </Export-Package>
                        <Import-Package>
                            org.wso2.carbon.mediation.statistics.stub.*; version="${carbon.mediation.imp.pkg.version}",
                            org.wso2.carbon.mediation.statistics.stub.aspect.*; version="${carbon.mediation.imp.pkg.version}",
                            *;resolution:=optional
                        </Import-Package>
                        <Carbon-Component>UIBundle</Carbon-Component>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
